
<div class="d-flex justify-content-center align-items-center">
  <div
    class="toast custom-toast-ui"
    role="alert"
    aria-live="assertive"
    aria-atomic="true"
    data-autohide="false"
  >
    <div id="toast_color" class="toast-header">
      <strong id="toast_title" class="mr-auto">Error Message</strong>
      <small>few seconds ago</small>
      <button
        type="button"
        class="ml-2 mb-1 close"
        data-dismiss="toast"
        aria-label="Close"
      >
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div id="toast_message" class="toast-body"></div>
  </div>
</div>
